emu_PUSHPOP:
    IFE B, 0xFFFF
        JMP emu_POP
emu_PUSH:
    SET PUSH, A
    SET B, emu_SP_offset+2 ;Because JSR emu_SET_checkSP and SET PUSH, A "move" the stack
    SET A, SP
    ADD A, emu_SP_offset+1
    SUB [A], 1
    JSR emu_SET_checkSP_checkPC
    SET B, [B-1]    ;Stack moved again
    SET A, POP
    SET PC, POP
emu_POP:
    SET PUSH, A
    SET B, emu_SP_offset+2
    SET A, SP
    ADD A, emu_SP_offset+1
    SET PUSH, [A]
    ADD [A], 1
    JSR emu_SET_checkSP_checkPC
    SET B, POP
    SET A, POP
    SET PC, POP
