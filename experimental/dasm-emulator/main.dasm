    SET A, SP
    SET EX, POP
    JMP emu_SET

emu_skip:
    ;TODO: Read in and skip an instruction
    SET PC, POP

emu_IFB:
    IFC [B], [A]
        JMP emu_skip
    SET PC, POP

emu_IFC:
    IFB [B], [A]
        JMP emu_skip
    SET PC, POP

emu_IFE:
    IFN [B], [A]
        JMP emu_skip
    SET PC, POP

emu_IFN:
    IFE [B], [A]
        JMP emu_skip
    SET PC, POP

emu_IFG:
    IFG [B], [A]
